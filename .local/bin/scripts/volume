#!/bin/sh

case $1 in
up)
  wpctl set-mute @DEFAULT_AUDIO_SINK@ 0
  wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 2%+
  ;;
down)
  wpctl set-mute @DEFAULT_AUDIO_SINK@ 0
  wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 2%-
  ;;
mute)
  wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
  ;;
esac

VOLUME=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | tr -dc '0-9' | sed 's/^0\{1,2\}//')

send_notification() {
  if [ "$1" = "mute" ]; then
    notify-send -a 'Volume' -h int:value:0 "Volume: Muted"
  else
    notify-send -a 'Volume' -h int:value:"$VOLUME" "Volume: ${VOLUME}%"
  fi
}

case $1 in
mute)
  case "$(wpctl get-volume @DEFAULT_AUDIO_SINK@)" in
  *MUTED*) send_notification mute ;;
  *) send_notification ;;
  esac
  ;;
*)
  send_notification
  ;;
esac
