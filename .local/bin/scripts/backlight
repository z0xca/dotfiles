#!/bin/bash

case $1 in
up)
  brightnessctl set 2%+ >/dev/null
  ;;
down)
  brightnessctl set 2%- >/dev/null
  ;;
esac

get_brightness() {
  brightnessctl -m | awk -F, '{gsub(/%/,"",$4); print $4}'
}

brightness=$(get_brightness)
notify-send -a "Backlight" -h int:value:"${brightness}" "Brightness: ${brightness}%"
